<section class="myorders">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg text-left">All Orders</h1>
        <% if (messages.success) { %>
        <div id="success-alert" class="flex items-center bg-green-500 font-bold text-white test-sm px-4 px-3 " role="alert">
            <p>Order Placed Successfully</p>
        </div>
        <% } %>
        <table class="mx-auto w-full text-left mt-6">
            <thead>
                <tr>
                    <th class="px-4 py-2">Orders</th>
                    <th class="px-4 py-2">Address</th>
                    <th class="px-4 py-2">Phone</th>
                    <th class="px-4 py-2">Time</th>
                </tr>
            </thead>
            <tbody>
                <% if (orders.length) { %>
                <% orders.forEach(element=> { %>
                    <tr>
                        <td class="px-4 py-2"> <a href="/customer/orders/<%= element._id %>" class="primary">
                                <%= element._id %>
                            </a> </td>
                        <td class="px-4 py-2">
                            <%= element.address %>
                        </td>
                        <td class="px-4 py-2">
                            <%= element.phone %>
                        </td>
                        <td class="px-4 py-2">
                            <%= moment( element.createdAt).format('hh:mm A') %>
                        </td>
                    </tr>
                    <% }) %>
                <% } else{ %>
                    <tr>
                        <td class="px-4 py-2" colspan="3">No Orders Found</td>
                    </tr>
               <% } %>
                
            </tbody>
        </table>
    </div>
</section>